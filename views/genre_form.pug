extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form_group
      label(for='name') Genre:
      input(type='text', placeholder='Fantasy, Poetry etc.' name='name' value=(undefined===genre ? '' : genre.name))
    button(type='submit') Submit

  if errors
   ul
    each error in errors
     li= error.msg