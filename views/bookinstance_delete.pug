extends layout

block content

    h1 #{title}: #{bookinstance._id}

    p Do you really want to delete this Copy?

    p #[strong Title :]
        a(href=bookinstance.book.url) #{bookinstance.book.title}

    p #[strong Imprint :] #{bookinstance.imprint}

    p #[strong Status :] 
        if bookinstance.status=='Available'
            span.text-success #{bookinstance.status}
        else if bookinstance.status=='Maintainence'
            span.text-danger #{bookinstance.status}
        else
            span.text-warning #{bookinstance.status}
    
    if bookinstance.status != 'Available'
        p #[strong Due back :] #{bookinstance.due_back}

    form(method='POST' action='')

        div.form-group 
            input#bookinstanceid.form-control(type='hidden' required='true' name='bookinstanceid' value=bookinstance._id)
        button.btn.btn-primary(type='submit') Delete

